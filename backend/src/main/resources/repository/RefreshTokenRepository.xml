<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.backend.repository.RefreshTokenRepository">
    <resultMap id="UserResultMap" type="User">
        <id column="u_id" property="id"/>
        <result property="username" column="username"/>
        <result property="email" column="email"/>
    </resultMap>
    <resultMap id="TokenResultMap" type="RefreshToken">
        <id column="r_id" property="id"/>
        <result column="token" property="token"/>
        <result column="expiry_date" property="expiryDate"/>
        <association column="users" property="user" javaType="User"/>
    </resultMap>
    <select id="findByToken" parameterType="java.lang.String" resultMap="TokenResultMap">
        SELECT r.id AS r_id,
               r.token,
               r.expiry_date,
               u.id AS u_id,
               u.username,
               u.email
        FROM refresh_token AS r
                 JOIN users AS u ON r.user_id = u.id
        WHERE r.token = #{token}
    </select>
    <insert id="insert" parameterType="RefreshToken" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO refresh_token
            (token, user_id, expiry_date)
        VALUES (#{token}, #{user.id}, #{expiryDate})
    </insert>
    <delete id="delete" parameterType="java.lang.String">
        DELETE
        FROM refresh_token
        WHERE token = #{id}
    </delete>
    <delete id="deleteByUser" parameterType="User">
        DELETE
        FROM refresh_token
        WHERE user_id = #{id}
    </delete>
</mapper>